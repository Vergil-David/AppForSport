<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settings_background"
    tools:context=".activities.LogInActivity">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:text="log in"
        android:layout_centerHorizontal="true"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        tools:ignore="HardcodedText" />

    <!--  make extra light-->
    <TextView
        android:id="@+id/to_login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSingUp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="60dp"
        android:gravity="center"
        android:text="Don`t have an account?"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <!-- Поле Email -->
    <EditText
        android:id="@+id/Email"
        style="@style/EditTextStyle"
        android:layout_height="51dp"
        android:layout_below="@+id/login_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:hint="Email"
        android:padding="1dp"
        android:paddingStart="20dp" />

    <EditText
        android:id="@+id/Password"
        style="@style/EditTextStyle"
        android:layout_height="51dp"
        android:layout_below="@id/Email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:hint="Password"
        android:padding="1dp"
        android:paddingStart="20dp" />



    <!-- Checkbox Remember Me -->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSingUp"
        android:layout_width="305dp"
        android:layout_height="55dp"
        android:layout_below="@+id/Password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:background="@drawable/button_background_2"

        android:text="Log In"
        android:textSize="24sp" />

    <!-- Декоративна лінія ліворуч -->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnToCreate"
        android:layout_width="208dp"
        android:layout_height="55dp"
        android:layout_below="@+id/to_login_title"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_background_2"
        android:text="Sign Up"
        android:textSize="24sp" />

    <View
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:layout_above="@id/google_icon"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@id/or_text"
        android:background="@color/white" />

    <!-- Текст "Or sing up with" -->
    <TextView
        android:id="@+id/or_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/google_icon"
        android:layout_centerHorizontal="true"
        android:text="Or sing up with"
        android:textColor="@color/white" />

    <!-- Декоративна лінія праворуч -->
    <View
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:layout_above="@id/google_icon"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/or_text"
        android:background="@color/white" />

    <!-- Іконка Google -->
    <ImageView
        android:id="@+id/google_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:src="@drawable/item_google_foreground" />



</RelativeLayout>
