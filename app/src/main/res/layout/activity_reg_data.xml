<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settings_background">

    <TextView
        android:id="@+id/signup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Enter your data"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/weight_text"
        style="@style/EditTextStyle"
        android:layout_width="305dp"
        android:layout_height="51dp"
        android:layout_marginTop="70dp"
        android:hint="Weight"
        android:padding="1dp"
        android:paddingStart="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_title" />

    <EditText
        android:id="@+id/height_text"
        style="@style/EditTextStyle"
        android:layout_width="305dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:hint="Height"
        android:padding="1dp"
        android:paddingStart="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weight_text" />

    <EditText
        android:id="@+id/age_text"
        style="@style/EditTextStyle"
        android:layout_width="305dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:hint="Age"
        android:padding="1dp"
        android:paddingStart="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/height_text" />

    <Spinner
        android:id="@+id/gender_spinner"
        style="@style/SpinnerTextStyle"
        android:layout_width="305dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:entries="@array/gender_options"
        android:padding="1dp"
        android:paddingStart="10dp"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/age_text" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEnter"
        android:layout_width="305dp"
        android:layout_height="48dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/button_background_2"
        android:text="Enter"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gender_spinner" />

    <View
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/google_icon"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/or_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or sign up with"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/google_icon"
        app:layout_constraintStart_toEndOf="@id/google_icon"
        tools:ignore="HardcodedText" />

    <View
        android:layout_width="151dp"
        android:layout_height="1dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/google_icon"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/google_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/item_google_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
