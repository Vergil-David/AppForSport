<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/rounded_shape_4"
    android:elevation="5dp">

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_shape_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            style="@style/textMealItem"
            android:id="@+id/textFoodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:text="name"
            android:textColor="@color/white" />
    </FrameLayout>

    <ImageView
        android:id="@+id/foodPhoto"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@+id/frame"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/foodCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginLeft="15dp"
        android:text="Calories: 0"
        android:textColor="@color/greyTextColor"
        app:layout_constraintStart_toEndOf="@+id/foodPhoto"
        app:layout_constraintTop_toBottomOf="@+id/frame" />

    <TextView
        android:id="@+id/foodServingGram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginLeft="15dp"
        android:text="Serving size: 0"
        android:paddingBottom="4dp"
        android:textColor="@color/greyTextColor"
        app:layout_constraintStart_toEndOf="@+id/foodPhoto"
        app:layout_constraintTop_toBottomOf="@+id/foodCalories" />

    <TextView
        android:id="@+id/foodFat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginLeft="15dp"
        android:text="Total Fat: 0g"
        android:paddingBottom="4dp"
        android:textColor="@color/greyTextColor"
        app:layout_constraintStart_toEndOf="@+id/foodPhoto"
        app:layout_constraintTop_toBottomOf="@+id/foodServingGram"/>

    <TextView
        android:id="@+id/foodProtein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginLeft="15dp"
        android:text="Protein: 0g"
        android:paddingBottom="4dp"
        android:textColor="@color/greyTextColor"
        app:layout_constraintStart_toEndOf="@+id/foodPhoto"
        app:layout_constraintTop_toBottomOf="@+id/foodFat"/>

    <TextView
        android:id="@+id/foodCarbohydrates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:text="Carbohydrates: 0g"
        android:textColor="@color/greyTextColor"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/foodProtein"
        app:layout_constraintTop_toBottomOf="@+id/foodProtein" />


</androidx.constraintlayout.widget.ConstraintLayout>