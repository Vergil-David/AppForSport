<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!--  make extra light-->
    <TextView
        android:id="@+id/singup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="Create an account"
        android:textColor="#7519EB"
        android:textSize="32sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/to_login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSingUp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Already have an account?"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="normal"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/Email"
        style="@style/EditTextStyle"
        android:layout_height="51dp"
        android:layout_below="@+id/singup_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="104dp"
        android:hint="Email"
        android:padding="1dp"
        android:paddingStart="20dp" />

    <EditText
        android:id="@+id/Password"
        style="@style/EditTextStyle"
        android:layout_height="51dp"
        android:layout_below="@id/Email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:hint="Password"
        android:padding="1dp"
        android:paddingStart="20dp" />

    <EditText
        android:id="@+id/Name"
        style="@style/EditTextStyle"
        android:layout_height="51dp"
        android:layout_below="@id/Password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:hint="Name"
        android:padding="1dp"
        android:paddingStart="20dp" />

    <!-- Checkbox Remember Me -->

    <android.widget.Button
        android:id="@+id/btnSingUp"
        android:layout_width="305dp"
        android:layout_height="48dp"
        android:layout_below="@+id/Name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_background_3"
        android:textColor="@color/white"
        android:text="Sing Up"
        android:textSize="24sp" />

    <!-- Декоративна лінія ліворуч -->

    <android.widget.Button
        android:id="@+id/btnLogIn"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_below="@+id/to_login_title"

        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_background_3"
        android:text="Log in"
        android:textSize="24sp" />

    <!-- Текст "Or sing up with" -->
    <View
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:layout_above="@id/google_icon"
        android:layout_alignParentStart="true"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="-48dp"
        android:layout_toStartOf="@id/or_text"
        android:background="@color/black" />

    <TextView
        android:id="@+id/or_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/google_icon"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textColor="@color/black" />

    <!-- Декоративна лінія праворуч -->

    <View
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:layout_above="@id/google_icon"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="-4dp"
        android:layout_marginBottom="-52dp"
        android:layout_toEndOf="@id/or_text"
        android:background="@color/black" />

    <ImageView
        android:id="@+id/google_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:src="@drawable/app_icon2" />


</RelativeLayout>
